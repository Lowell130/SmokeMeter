# === MongoDB Connection ===
# Connection string (URI) del cluster o server MongoDB
MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER_URL>/
# Nome del database da usare
MONGO_DB=smokemeter

# === JWT Config ===
# Chiave segreta usata per firmare i token
JWT_SECRET=supersecretkey
# Algoritmo di firma (default HS256)
JWT_ALG=HS256
# Durata access token in minuti (default 1440 = 24h)
ACCESS_TOKEN_EXPIRE_MINUTES=1440
# Durata refresh token in giorni (opzionale, se implementato)
# REFRESH_TOKEN_EXPIRE_DAYS=30

# === CORS Config ===
# Origine ammessa per le richieste frontend
CORS_ORIGINS=http://localhost:3000

# === Nuxt Frontend ===
# Base URL delle API usato dal frontend
NUXT_PUBLIC_API_BASE=http://localhost:8000
